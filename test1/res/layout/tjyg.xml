<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg">
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textSize="12sp"/>
    <EditText 
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textSize="12sp"
        android:paddingTop="5sp"/>  
    <RadioGroup         
        android:id="@+id/xingbie"      
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"   
        android:checkedButton="@+id/male"   
        android:orientation="horizontal">    
    <RadioButton          
        android:id="@+id/male"   
        android:layout_width="wrap_content"     
        android:layout_height="wrap_content"            
        android:text="男"
        android:textSize="12sp"/>      
    <RadioButton                
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content"  
        android:text="女"
        android:textSize="12sp"/>
    </RadioGroup>
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄"
        android:textSize="12sp"
        />
    <EditText 
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="2"/> 
        </LinearLayout>
        <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="5sp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="民族"
        android:textSize="12sp"
        />
    <EditText 
        android:id="@+id/et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/> 
        </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="部门"
        android:textSize="12sp"
        android:paddingTop="5sp"/>
    <Spinner
        android:id="@+id/bm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="职位"
        android:textSize="12sp"
        />
    <Spinner
        android:id="@+id/zw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本工资"
        android:textSize="12sp"
        />
    <TextView 
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="岗位补贴"
        android:textSize="12sp"
        android:paddingTop="5sp"/>
    <TextView 
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="入职日期"
        android:textSize="12sp"/>
    <TextView 
        android:id="@+id/dateview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:textSize="20sp"/>
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证号码"
        android:textSize="12sp"
        android:paddingTop="5sp"/>
    <EditText 
        android:id="@+id/et4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="18"/>
    </LinearLayout>
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话"
        android:textSize="12sp"
        android:paddingTop="5sp"/>
    <EditText 
        android:id="@+id/et5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="11"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="婚姻状况"
        android:textSize="12sp"
        android:paddingTop="5sp"/>
    <RadioGroup         
        android:id="@+id/hunyin"      
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"   
        android:checkedButton="@+id/weihun"   
        android:orientation="horizontal">    
    <RadioButton          
        android:id="@+id/weihun"   
        android:layout_width="wrap_content"     
        android:layout_height="wrap_content"            
        android:text="未婚"
        android:textSize="12sp"/>      
    <RadioButton                
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content"  
        android:text="已婚"
        android:textSize="12sp"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学历"
        android:textSize="12sp"
        android:paddingTop="5sp"/>
    <RadioGroup         
        android:id="@+id/xueli"      
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"   
        android:checkedButton="@+id/dazhuan"   
        android:orientation="horizontal">    
    <RadioButton          
        android:id="@+id/dazhuan"   
        android:layout_width="wrap_content"     
        android:layout_height="wrap_content"            
        android:text="大专及以下"
        android:textSize="12sp"/>      
    <RadioButton        
        android:id="@+id/benke"        
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content"  
        android:text="本科"
        android:textSize="12sp"/>
    <RadioButton                
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content"  
        android:text="硕士及以上"
        android:textSize="12sp"/>
    </RadioGroup>
    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:paddingTop="15sp"
       >
    <Button
           android:id="@+id/yes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="确定"
           android:textSize="30sp" 
           />

    <Button
           android:id="@+id/no"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="取消"
           android:textSize="30sp"
           />
    </LinearLayout>
  </LinearLayout>
</ScrollView>